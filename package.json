    "lint:js": "eslint ./ --fix --format stylish --color",
    "lint:css": "stylelint --fix",
    "lint": "npm run lint:css && npm run lint:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/premedium/premedium.git"
